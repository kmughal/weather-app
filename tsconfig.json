{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "/src/dist/",
        "target": "es5",
        "baseUrl": "types",
        "typeRoots": ["types"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2017", "dom"]
    },
    "include": [
        "wwwroot/src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}